{
  "name": "backend",
  "version": "1.0.0",
  "module": "src/app.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/app.ts",
    "build": "bun install",
    "start": "bun run src/app.ts",
    "clean": "rm -rf dist",
    "seed:admin": "bun run scripts/seedAdmin.ts",
    "seed:user": "bun run scripts/seedUsers.ts",
    "seed:workflows": "bun run scripts/seedWorkflows.ts",
    "seed:tasks": "bun run scripts/seedTasks.ts",
    "seed:notifications": "bun run scripts/seedNotifications.ts",
    "seed:all": "bun run seed:admin && bun run seed:user && bun run seed:workflows && bun run seed:tasks && bun run seed:notifications",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "morgan": "^1.10.1",
    "zod": "^4.3.6"
  }
}
